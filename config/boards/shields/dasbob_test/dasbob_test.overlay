#include <dt-bindings/zmk/matrix_transform.h>

/ {
    chosen {
        zmk,kscan = &kscan0;
        zmk,matrix_transform = &default_transform;
    };

    default_transform: keymap_transform_0 {
        compatible = "zmk,matrix-transform";
        columns = <3>;
        rows = <3>;
        map = <
            RC(0,0) RC(0,1) RC(0,2)
            RC(1,0) RC(1,1) RC(1,2)
            RC(2,0) RC(2,1) RC(2,2)
        >;
    };

    kscan0: kscan {
        compatible = "zmk,kscan-gpio-direct";
        label = "KSCAN";

        row-gpios
            = <&xiao_d 13 (GPIO_ACTIVE_LOW | GPIO_PULL_UP)>
            , <&xiao_d 28 (GPIO_ACTIVE_LOW | GPIO_PULL_UP)>
            , <&xiao_d 12 (GPIO_ACTIVE_LOW | GPIO_PULL_UP)>
            , <&xiao_d 22 (GPIO_ACTIVE_LOW | GPIO_PULL_UP)>
            , <&xiao_d 14 (GPIO_ACTIVE_LOW | GPIO_PULL_UP)>
            , <&xiao_d 26 (GPIO_ACTIVE_LOW | GPIO_PULL_UP)>
            , <&xiao_d 21 (GPIO_ACTIVE_LOW | GPIO_PULL_UP)>
            , <&xiao_d 23 (GPIO_ACTIVE_LOW | GPIO_PULL_UP)>
            , <&xiao_d 7 (GPIO_ACTIVE_LOW | GPIO_PULL_UP)>
            ;
    };
};
